{
  "name": "stackflow-contracts-tests",
  "version": "1.0.0",
  "description": "Run unit tests on this project.",
  "type": "module",
  "private": true,
  "scripts": {
    "test": "vitest run",
    "test:report": "vitest run -- --coverage --costs",
    "test:watch": "chokidar \"tests/**/*.ts\" \"contracts/**/*.clar\" -c \"pnpm run test:report\"",
    "test:all": "node run-tests.js",
    "test:unit": "vitest run",
    "test:integration": "node tests/integration/integration-test-m1.js",
    "test:api": "node tests/contract-calls/simple-contract-test.js",
    "simulate": "node run-simulation.cjs",
    "simulate:quick": "node -e \"const {M1Simulator} = require('./simulation/m1-simulation.ts'); const sim = new M1Simulator({strategies:['CALL','BPSP'], tradeCount:200, gasCostPerTrade:0.15}); sim.runSimulation().then(r => console.log('Quick simulation:', r.length, 'trades,', r.filter(t => t.isProfitable).length, 'profitable'));\""
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@hirosystems/clarinet-sdk": "^3.7.0",
    "@scure/bip32": "^2.0.1",
    "@scure/bip39": "^2.0.1",
    "@stacks/encryption": "^7.3.1",
    "@stacks/transactions": "^7.2.0",
    "@stacks/wallet-sdk": "^7.2.0",
    "@types/node": "^24.4.0",
    "bip32": "^5.0.0",
    "bip39": "^3.1.0",
    "chokidar-cli": "^3.0.0",
    "dotenv": "^17.2.3",
    "tiny-secp256k1": "^2.2.4",
    "vitest": "^3.2.4",
    "vitest-environment-clarinet": "^2.3.0"
  },
  "devDependencies": {
    "@stacks/network": "^7.2.0",
    "@stacks/wallet-sdk": "^7.2.0",
    "bip39": "^3.1.0",
    "dotenv": "^17.2.3"
  }
}
